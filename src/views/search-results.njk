{% extends "layout.njk" %}
{% block title %}
  <title>Resultado da Pesquisa</title>
{% endblock title %}
{% block styles %}
  <link rel="stylesheet" href="/css/search-results.css"/>
  <link rel="stylesheet" href="/css/style.css"/>
{% endblock styles %}
{% set pageId = "search-results" %}
{#
<div id="page-search-results">
  #}
{% block content %}
  {% include "partials/page-header.njk" %}
  <main>
    {% if total > 0 %}
      <h4>
        <strong>{{ total }} pontos</strong>
        encontrados
      </h4>
      <div class="cards">
        {% for place in places %}
          <div class="card">
            <div class="card-header">
              <img src="{{ place.image }}"/>
            </div>
            <div class="card-body">
              <span class="tag tag-teal">{{ place.name }}</span>
              <h4>
                {{ place.address }}, {{ place.neighborhood }}, {{ place.number_address }}, {{ place.city }} - {{ place.state }},
                {{ place.zip_code }}
              </h4>
              <p>
                Email: {{ place.email }}<br/> Telefone: {{ place.phone }}<br/>
              </p>
              <div class="items-collected">
                <h5>Items para doação</h5>
                <div class="items">
                  {% for item in place.items %}
                    <div class="item">
                      <img src="{{ item.imageUrl }}" alt="{{ item.id }}"></div>
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        {% else %}
          <h4>
            <strong>Nenhum</strong>
            local encontrados
          </h4>
        {% endif %}
      </main>
    {% endblock content %}
  </div>